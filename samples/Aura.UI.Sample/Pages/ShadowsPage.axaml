<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:light="clr-namespace:Aura.UI.Lighting;assembly=Aura.UI.Lighting"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Aura.UI.ControlsGallery.Pages.ShadowsPage">
	<Grid>
		<Border Width="500" Height="250" Background="White"
				light:Shadow.BoxShadow="{BoxShadow BlurRadius=5, ShadowColor=Yellow, SpreadRadius=10}"/>
	</Grid>
</UserControl>
