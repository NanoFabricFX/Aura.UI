					<TextBlock>test2</TextBlock>
				</AuraTabItem>
				<AuraTabItem Header="test4" IsClosable="False">
					<TextBlock>test2</TextBlock>
				</AuraTabItem>
				<AuraTabItem Header="test4" IsClosable="True">
					<TextBlock>test2</TextBlock>
				</AuraTabItem>
			</AuraTabView>
		</Border>
	</Design.PreviewWith>
</Styles>